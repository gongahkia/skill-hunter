generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContractSourceType {
  UPLOAD
  WEB
  EXTENSION_DOM
  DESKTOP_SCREEN
  CLIPBOARD
}

enum ContractProcessingStatus {
  CREATED
  UPLOADING
  QUEUED
  INGESTING
  READY
  FAILED
}

enum ClauseType {
  DEFINITIONS
  SCOPE
  PAYMENT
  TERM
  TERMINATION
  LIABILITY
  INDEMNITY
  IP
  CONFIDENTIALITY
  PRIVACY
  GOVERNING_LAW
  DISPUTE_RESOLUTION
  MISC
  UNKNOWN
}

enum FindingSeverity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

enum FindingStatus {
  OPEN
  ACCEPTED
  DISMISSED
  NEEDS_EDIT
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  email         String         @unique
  passwordHash  String         @map("password_hash")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  sessions      Session[]
  contracts     Contract[]
  policyProfile PolicyProfile?

  @@map("users")
}

model Session {
  id                  String    @id @default(uuid()) @db.Uuid
  userId              String    @map("user_id") @db.Uuid
  tokenHash           String    @unique @map("token_hash")
  tokenFamilyId       String    @map("token_family_id") @db.Uuid
  parentSessionId     String?   @map("parent_session_id") @db.Uuid
  replacedBySessionId String?   @map("replaced_by_session_id") @db.Uuid
  expiresAt           DateTime  @map("expires_at")
  revokedAt           DateTime? @map("revoked_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenFamilyId])
  @@map("sessions")
}

model Contract {
  id         String                   @id @default(uuid()) @db.Uuid
  ownerId    String                   @map("owner_id") @db.Uuid
  title      String
  sourceType ContractSourceType       @map("source_type")
  status     ContractProcessingStatus @default(CREATED)
  createdAt  DateTime                 @default(now()) @map("created_at")
  updatedAt  DateTime                 @updatedAt @map("updated_at")
  owner      User                     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  versions   ContractVersion[]

  @@index([ownerId])
  @@index([status])
  @@map("contracts")
}

model ContractVersion {
  id            String         @id @default(uuid()) @db.Uuid
  contractId    String         @map("contract_id") @db.Uuid
  checksum      String         @map("source_checksum")
  storageUri    String         @map("storage_uri")
  createdAt     DateTime       @default(now()) @map("created_at")
  contract      Contract       @relation(fields: [contractId], references: [id], onDelete: Cascade)
  clauses       Clause[]
  evidenceSpans EvidenceSpan[]
  findings      Finding[]

  @@index([contractId])
  @@unique([contractId, checksum])
  @@map("contract_versions")
}

model Clause {
  id                String          @id @default(uuid()) @db.Uuid
  contractVersionId String          @map("contract_version_id") @db.Uuid
  type              ClauseType      @default(UNKNOWN)
  normalizedText    String          @map("normalized_text")
  startOffset       Int             @map("start_offset")
  endOffset         Int             @map("end_offset")
  createdAt         DateTime        @default(now()) @map("created_at")
  contractVersion   ContractVersion @relation(fields: [contractVersionId], references: [id], onDelete: Cascade)
  findings          Finding[]

  @@index([contractVersionId])
  @@index([type])
  @@map("clauses")
}

model EvidenceSpan {
  id                String          @id @default(uuid()) @db.Uuid
  contractVersionId String          @map("contract_version_id") @db.Uuid
  startOffset       Int             @map("start_offset")
  endOffset         Int             @map("end_offset")
  excerpt           String
  pageNumber        Int?            @map("page_number")
  createdAt         DateTime        @default(now()) @map("created_at")
  contractVersion   ContractVersion @relation(fields: [contractVersionId], references: [id], onDelete: Cascade)
  findings          Finding[]

  @@index([contractVersionId])
  @@map("evidence_spans")
}

model Finding {
  id                String          @id @default(uuid()) @db.Uuid
  contractVersionId String          @map("contract_version_id") @db.Uuid
  clauseId          String?         @map("clause_id") @db.Uuid
  evidenceSpanId    String          @map("evidence_span_id") @db.Uuid
  title             String
  description       String
  severity          FindingSeverity
  confidence        Decimal         @db.Decimal(5, 4)
  status            FindingStatus   @default(OPEN)
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")
  contractVersion   ContractVersion @relation(fields: [contractVersionId], references: [id], onDelete: Cascade)
  clause            Clause?         @relation(fields: [clauseId], references: [id], onDelete: SetNull)
  evidenceSpan      EvidenceSpan    @relation(fields: [evidenceSpanId], references: [id], onDelete: Cascade)

  @@index([contractVersionId])
  @@index([clauseId])
  @@index([severity])
  @@index([status])
  @@map("findings")
}

model PolicyProfile {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String   @unique @map("user_id") @db.Uuid
  riskThresholds Json     @map("risk_thresholds")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("policy_profiles")
}
