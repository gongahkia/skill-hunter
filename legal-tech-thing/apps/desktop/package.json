{
  "name": "@legal-tech/desktop",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "build": "vite build && tsc -p tsconfig.electron.json",
    "dev": "concurrently -k \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"wait-on http://localhost:5173 file:dist-electron/main.js && VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.js\"",
    "start": "electron dist-electron/main.js",
    "lint": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.electron.json",
    "test": "echo desktop test"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "wait-on": "^8.0.2"
  }
}
